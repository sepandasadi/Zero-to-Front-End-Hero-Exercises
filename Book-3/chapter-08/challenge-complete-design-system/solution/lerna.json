{
  "version": "independent",
  "npmClient": "npm",
  "command": {
    "publish": {
      "conventionalCommits": true,
      "message": "chore(release): publish",
      "registry": "https://registry.npmjs.org/"
    },
    "version": {
      "allowBranch": "main",
      "message": "chore(release): version packages"
    }
  },
  "packages": [
    "packages/*",
    "apps/*"
  ],
  "ignoreChanges": [
    "**/__tests__/**",
    "**/*.md"
  ]
}

