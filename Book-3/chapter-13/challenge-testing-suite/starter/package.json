{
  "name": "challenge-testing-suite",
  "version": "1.0.0",
  "description": "Challenge: Full Testing Suite - Todo Application",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test": "vitest run",
